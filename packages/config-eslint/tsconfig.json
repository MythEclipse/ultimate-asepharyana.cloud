{
  "extends": "@asepharyana/config-typescript/base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@base/*": ["./*"]
    },
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./eslint.config.mjs"],
  "exclude": ["node_modules", "dist", "types"]
}
