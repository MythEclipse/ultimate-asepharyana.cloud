{
  "extends": "@asepharyana/config-typescript/base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2017"
  },
  "include": [
    "./src/**/*",
    "./eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/.prisma"
  ]
}
