{
  "name": "rust",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/rust/src",
  "targets": {
    "build": {
      "executor": "@monodon/rust:build",
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run --bin rust --manifest-path apps/rust/Cargo.toml",
        "cwd": "."
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'apps\\\\rust\\\\target\\\\release\\\\rust.exe' : './apps/rust/target/release/rust', {stdio: 'inherit'})\"",
        "cwd": "."
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy --workspace -- -D warnings",
        "cwd": "apps/rust"
      }
    },
    "test": {
      "executor": "@monodon/rust:test",
      "options": {
        "target": "rust"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt --all -- --check",
        "cwd": "apps/rust"
      }
    }
  },
  "tags": []
}
