{
  "extends": "@asepharyana/config-typescript/base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@asepharyana/database": ["../../packages/database/dist"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "types", "**/*.mjs"]
}