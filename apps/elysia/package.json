{
  "name": "@asepharyana/elysia",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "db:generate": "cd ../../libs/services && bun run drizzle-kit generate",
    "db:migrate": "cd ../../libs/services && bun run drizzle-kit migrate",
    "db:push": "cd ../../libs/services && bun run drizzle-kit push",
    "db:studio": "cd ../../libs/services && bun run drizzle-kit studio",
    "quiz:seed": "bun run scripts/seed-questions.ts",
    "quiz:test": "bun run scripts/test-quiz-client.ts"
  },
  "dependencies": {
    "@asepharyana/services": "*",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "elysia": "^1.4.15",
    "ioredis": "^5.8.2",
    "jose": "^6.1.0",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^7.0.3",
    "bun-types": "^1.3.2"
  }
}
