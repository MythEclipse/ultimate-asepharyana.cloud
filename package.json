{
  "private": true,
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "buildnc": "turbo run build --force",
    "build:express": "turbo run build --filter=@asepharyana/express",
    "build:nextjs": "turbo run build --filter=@asepharyana/web",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "nextjs": "turbo run start --filter=@asepharyana/web",
    "express": "turbo run start --filter=@asepharyana/express",
    "start": "concurrently \"npm run express\" \"npm run nextjs\"",
    "update": "npm update",
    "ceklog": "tail -n 3000 apps/NextJS/app.log"
  },
  "devDependencies": {
    "@babel/preset-typescript": "~7.26.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "copyfiles": "^2.4.1",
    "rimraf": "~6.0.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "name": "@asepharyana/asepharyana.cloud",
  "version": "0.1.0",
  "description": "My personal website",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Asepharyana71/asepharyana.cloud.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@babel/cli": "~7.26.4",
    "@babel/core": "~7.26.9",
    "@babel/preset-env": "~7.26.9",
    "@prisma/client": "6.x",
    "@types/node": "^22.13.5",
    "concurrently": "~9.1.2",
    "cross-env": "~7.0.3",
    "dotenv": "16.x",
    "ncp": "^2.0.0",
    "prettier": "~3.5.1",
    "prisma": "6.x",
    "tsx": "~4.19.2",
    "turbo": "~2.4.2"
  },
  "packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "core-js-pure",
      "esbuild",
      "prisma",
      "sharp",
      "sqlite3"
    ]
  }
}
